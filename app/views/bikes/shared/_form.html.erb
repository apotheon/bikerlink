<%= form_for @bike do |f| %>
  <div class="field">
    <%= f.label :name %></br>
    <%= f.text_field :name, autofocus: true, autocomplete: :name %>
  </div>

  <div class="field">
    <%= f.label :description %></br>
    <%= f.text_area :description, autocomplete: :description, size: '80x15' %>
  </div>

  <div class="actions">
    <%= f.submit 'Submit', class: :submit %>
  </div>
<% end %>
